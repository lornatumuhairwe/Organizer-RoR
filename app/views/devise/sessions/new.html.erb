<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col">
<h2>Login</h2>
    <div class="auth-form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :email, class: "mdl-textfield__label" %><br />
    <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :password, class: "mdl-textfield__label" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Login", class: "organiza-button mdl-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>